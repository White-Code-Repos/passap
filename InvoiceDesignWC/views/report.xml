<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report

            auto="False"
            string="Invoices new"
            id="account.account_invoices"
            model="account.invoice"
            report_type="qweb-pdf"
            name="InvoiceDesignWC.report_invoice_document"
            file="InvoiceDesignWC.report_invoice_document"
            usage="default"
    />
        <template id="report_invoice_document">
        <div class="header">
            <t t-if="request.env['invoice.design.wc'].search([])" >
                <t t-set="img1" t-value="request.env['invoice.design.wc'].search([])[0].image1"/>
                <t t-set="img2" t-value="request.env['invoice.design.wc'].search([])[0].image2"/>
                <t t-set="img3" t-value="request.env['invoice.design.wc'].search([])[0].image3"/>
                <t t-set="img4" t-value="request.env['invoice.design.wc'].search([])[0].image4"/>
                <t t-set="img5" t-value="request.env['invoice.design.wc'].search([])[0].image5"/>
            </t>

            <t t-foreach="docs" t-as="o">
                <div class="row">
                     <div style="width:15%;">
                         <t t-if="not img1">
                              <img  src="/InvoiceDesignWC/static/image/img1.jpeg"
                               style="max-height:3cm; max-width:3cm;"
                                alt="Logo"/>
                          </t>
                            <t t-if="img1"><img t-if="img1" t-att-src="image_data_uri(img1)" style="max-height:3cm; max-width:3cm;"/></t>
                    </div>
                     <div style="width:15%">
                         <t t-if="not img2">
                              <img  src="/InvoiceDesignWC/static/image/img2.jpeg"
                               style="max-height:3cm; max-width:3cm;"
                                alt="Logo"/>
                         </t>
                            <t t-if="img2"><img t-if="img2" t-att-src="image_data_uri(img2)" style="max-height:3cm; max-width:3cm;"/></t>
                    </div>
                     <div style="width:30%"></div>
                     <div style="width:40%;">
                         <t t-if="not img3">
                              <img  src="/InvoiceDesignWC/static/image/img3.jpeg"
                               style="max-height:3cm; max-width:3cm;"
                                alt="Logo"/>
                          </t>
                            <t t-if="img3"><img t-if="img3" t-att-src="image_data_uri(img3)" style="max-height:3cm; max-width:3cm;"/></t>

                         <t t-if="not img5">
                              <img  src="/InvoiceDesignWC/static/image/img5.jpeg"
                               style="max-height:3cm; max-width:3cm;"
                                alt="Logo"/>
                          </t>
                            <t t-if="img5"><img t-if="img5" t-att-src="image_data_uri(img5)" style="max-height:3cm; max-width:3cm;"/></t>

                      <div style="width:40%">
                          <t t-if="not img4">
                              <img  src="/InvoiceDesignWC/static/image/img4.jpeg"
                               style="max-height:3cm; max-width:3cm;"
                                alt="Logo"/>
                          </t>
                            <t t-if="img4"><img t-if="img4" t-att-src="image_data_uri(img4)" style="max-height:3cm; max-width:3cm;"/></t>

                      </div>
                    </div>

                </div>
            </t>
         </div>

         <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
            <t t-call="web.internal_layout">
                     <hr/>
                     <h2><b>WHITE CODE</b></h2>
                     <h4>INFORMATION TECHNOLOGY</h4>

                     <div class="row" style="margin:3%">
                       <div style="margin:3%;width:30%;margin-top:-24px;"> Cairo Arkan Plaza</div>
                        <h5 style="margin:3%;width:70%;margin-top:-24px;">TO:</h5>
                     </div>

                     <div class="row" style="margin:3%;margin-top:-24px;">
                           <div style="margin:3%;width:30%;margin-top:-24px;">El Sheikh Zayed,Building #4</div>
                           <div style="margin:3%;width:70%;margin-top:-24px;">Odoo S.A.</div>
                     </div >

                     <div class="row" style="margin:3%;margin-top:-24px;">
                           <div style="margin:3%;width:30%;margin-top:-24px;">Cairo ,Egypt</div>
                           <div style="margin:3%;width:70%;margin-top:-24px;">Chaussee de Namur 40</div>
                     </div>

                     <div class="row" style="margin:3%;margin-top:-24px;">
                            <div style="margin:3%;width:30%;margin-top:-24px;">www.white-code.co.uk</div>
                            <div style="margin:3%;width:70%;margin-top:-24px;">1367 Grand-Rosiere</div>
                     </div>
                     <div class="row" style="margin:3%;margin-top:-24px;">
                           <div style="margin:3%;width:30%;margin-top:-24px;"><u>info@white-code.co.uk</u></div>
                           <div style="margin:3%;width:70%;margin-top:-24px;">Belgium</div>
                     </div>
                     <div class="row" style="margin:3%;margin-top:-24px;">
                        <div style="margin:3%;width:30%;margin-top:-24px;"><u>(+20)1223222576</u></div>
                        <div style="margin:3%;width:70%;margin-top:-24px;"> VAT BE0477472701 </div>
                     </div>
                     <div style="float:right">
                        <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
                     </div>

                <div class="page">
                       <table class="table table-sm o_main_table" name="invoice_line_table">
                           <t t-set="row_num" t-value="0"/>
                           <thead>
                               <tr>
                                   <t t-set="colspan" t-value="6"/>
                                   <th class="text-left"><span>#</span></th>
                                   <th class="text-right"><span>Description</span></th>
                                   <th class="text-right"><span>QTY</span></th>
                                   <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>UNIT PRICE</span></th>
                               </tr>
                           </thead>
                           <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <t t-set="row_num" t-value="row_num + 1"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td><span t-esc="row_num"/></td>
                                        <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.price_unit"/>
                                        </td>

                                    </t>
                                </tr>
                                </t>
                           </tbody>
                       </table>
                     <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
        </t>

         <div class="footer">
             <hr/>
                <div class="row">
                    <t t-if="request.env['invoice.design.wc'].search([])" >
                         <t t-set="img1" t-value="request.env['invoice.design.wc'].search([])[0].image1"/>
                    </t>
                         <div style="width:15%;">
                         <t t-if="not img1">
                              <img  src="/InvoiceDesignWC/static/image/img1.jpeg"
                               style="max-height:3cm; max-width:3cm;"
                                alt="Logo"/>
                          </t>
                            <p t-if="img1"><img t-if="img1" t-att-src="image_data_uri(img1)" style="max-height:3cm; max-width:3cm;"/></p>
                        </div>
                      <div style="width:20%">
                                <h5>Eypt Office </h5>
                                <div>Arkan Plaza Building #4/Floor 4 -Sheikh Zayed</div>
                                <div>Cairo, Egypt</div>
                            </div>
                      <div style="width:25%" >
                                <h5>KSA Office </h5>
                                <div>32246 Al-Jalawiah -King Saud St</div>
                                <div>Dammam ,Saudi Arabia</div>
                            </div>
                      <div style="width:20%">
                                <h5>Libya Office </h5>
                                <div>Asoussa At ,Abou Nawwas</div>
                                <div>Gergares ,Tripoil</div>
                            </div>
                      <div style="width:20%">
                                 <h6><a style="color:blue">Email: info@white-code.co.uk </a></h6>
                                 <h6><a style="color:blue">Website: www.white-code.co.uk</a></h6>
                             </div>


                 </div>
         </div>

    </template>
    </data>
</odoo>

